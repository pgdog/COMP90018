<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/search_friend_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_friend_title"
        android:textSize="@dimen/design_title_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/search_friend_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_friend_back_btn"
        app:layout_constraintTop_toTopOf="@+id/search_friend_back_btn"
        android:layout_marginRight="@dimen/design_title_icon_size">

    </TextView>

    <Button
        android:id="@+id/search_friend_back_btn"
        android:layout_width="@dimen/design_title_icon_size"
        android:layout_height="@dimen/design_title_icon_size"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/design_title_divider_margin"
        android:layout_marginLeft="@dimen/design_title_icon_margin_left"></Button>

    <TextView
        android:id="@+id/textview10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBottomNavBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_friend_title_text"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/search_friend_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_border_edit"
        android:hint="@string/add_friend_title_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="@dimen/design_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview10"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></EditText>

    <TextView
        android:id="@+id/search_friend_result_text"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_border_edit"
        android:text="The user doesn't exist"
        android:gravity="center"
        android:textSize="@dimen/design_title_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_friend_edit_text"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>
