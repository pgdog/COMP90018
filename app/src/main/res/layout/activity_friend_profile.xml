<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FriendProfileActivity">

    <Button
        android:id="@+id/friend_profile_back_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"></Button>

    <TextView
        android:id="@+id/textview8"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBottomNavBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_profile_back_btn"
        android:layout_marginTop="20dp"></TextView>

    <ImageView
        android:id="@+id/friend_profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview8"></ImageView>

    <TextView
        android:id="@+id/friend_profile_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Friend's Nickname"
        app:layout_constraintBottom_toBottomOf="@+id/friend_profile_image"
        app:layout_constraintStart_toEndOf="@+id/friend_profile_image"
        app:layout_constraintTop_toTopOf="@+id/friend_profile_image"
        android:layout_marginLeft="15dp"></TextView>

    <TextView
        android:id="@+id/textview9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBottomNavBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/friend_profile_image"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"></TextView>

    <LinearLayout
        android:id="@+id/friend_profile_chat"
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview9"
        android:gravity="center"
        android:background="@drawable/shape_border"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/friend_profile_chat_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_chat"></ImageView>

        <TextView
            android:id="@+id/friend_profile_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Send Message"></TextView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>