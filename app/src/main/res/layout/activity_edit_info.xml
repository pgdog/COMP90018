<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/personal_info_back_btn"
        android:layout_width="@dimen/design_title_icon_size"
        android:layout_height="@dimen/design_title_icon_size"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/design_title_icon_margin_left"
        android:layout_marginTop="@dimen/design_title_divider_margin"></Button>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/design_title_icon_size"
        android:gravity="center"
        android:text="Personal Information"
        android:textSize="@dimen/design_title_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/personal_info_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/personal_info_back_btn"
        app:layout_constraintTop_toTopOf="@+id/personal_info_back_btn"></TextView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/design_title_divider_margin"
        android:background="@color/colorBottomNavBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personal_infor_pic_editView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photo"
            android:textSize="@dimen/design_text_size_message_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"></TextView>

        <ImageView
            android:id="@+id/personal_info_image"
            android:layout_width="@dimen/design_pic_size_friend"
            android:layout_height="@dimen/design_pic_size_friend"
            app:layout_constraintBottom_toBottomOf="@+id/textView7"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            android:layout_marginRight="20dp"></ImageView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/design_pic_size_item_icon"
            android:layout_height="@dimen/design_pic_size_item_icon"
            android:background="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/personal_info_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/personal_info_image"
            android:layout_marginRight="20dp"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/colorBottomNavBack"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personal_infor_pic_editView"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/personal_infor_name_editView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/personal_infor_pic_editView"
        app:layout_constraintTop_toBottomOf="@+id/textView10">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="User Name"
            android:textSize="@dimen/design_text_size_message_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:id="@+id/personal_info_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="name"
            android:textSize="@dimen/design_text_size_message_name"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/textView8"></TextView>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/design_pic_size_item_icon"
            android:layout_height="@dimen/design_pic_size_item_icon"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_arrow_right"
            app:layout_constraintBottom_toBottomOf="@+id/personal_info_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/personal_info_name_text"></ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
